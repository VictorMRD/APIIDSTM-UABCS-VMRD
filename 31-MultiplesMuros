<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <canvas id="myCanvas" width="1470" height="800" style="border: 2px solid black"></canvas>
	<script>
	//A esto le tenemos que agregar un objeto jugador
	//Y un objeto muro?
		const canvas = document.getElementById("myCanvas");
		const ctx = canvas.getContext("2d");
		let dir = 0;
        let bandera = true;

		class Wall {
			constructor(_x,_y,_width, _height){
				this.width = _width;
				this.height = _height;
				this.x = _x;
				this.y = _y;
			}

			set xpos(_x) {
				this.x = _x;
			}

			set ypos(_y) {
				this.y = _y;
			}

			set wallWidth(_width){
				this.width = _width;
			}

			set wallHeight(_height){
				this.height = _height;
			}

			get xPos() {
				return this.x;
			}

			get yPos() {
				return this.y;
			}

			get getWidth(){
				return this.width;
			}

			get getHeight(){
				return this.height;
			}
		}

		class Player {
			constructor(_x,_y,_width){
				this.width = _width;
				this.x = _x;
				this.y = _y;
			}
			set setX(x){
				this.x = x;
			}

			get getX() {
				return this.x;
			}

			set setY(y){
				this.y = y;
			}

			get getY() {
				return this.y;
			}

			set setWidth(width){
				this.width = width;
			}

			get getWidth() {
				return this.width;
			}
			

		}
		
		let player = new Player(600,350,100);
		let wall1 = [new Wall(340,200,800,50),new Wall(340,600,800,50),new Wall(100,300,50,800)];

        //Aca pintamos los elementos
		function repaint(){
			ctx.beginPath();
			ctx.fillStyle = "white";
			ctx.rect(0, 0, 1470, 800);
			ctx.fill();

			for(let findex = 0; findex < wall1.length; findex++){
			ctx.beginPath();
			ctx.fillStyle = "black";
			ctx.rect(wall1[findex].xPos, wall1[findex].yPos, wall1[findex].getWidth, wall1[findex].getHeight);
			ctx.stroke();
			ctx.fill();
			}
			draw();
		}

		function draw(){
			ctx.beginPath();
			ctx.fillStyle = "black";
			ctx.rect(player.getX, player.getY, player.getWidth, player.getWidth);
			ctx.stroke();
		}

		document.addEventListener("keydown", function (e){
			switch(e.keyCode){
				case 87:
				case 83:
				case 68:
				case 65:
					dir = e.keyCode;
					break;
			}
		});

        let flag = false;
		function update(){
			//Controladores de movimiento
			//Controlador de rebote en pared
			console.log(dir);
			switch(dir){ 
				case 87:
					player.setY = (player.getY - 10);
					if(player.getY<0) {dir=83}
					break;
				case 83:
					player.setY = (player.getY + 10);
					if(player.getY>(canvas.height - player.getWidth)){dir=87}
					break;
				case 68:
					player.setX = (player.getX + 10);
					if(player.getX>canvas.width - player.getWidth){dir=65}
					break;
				case 65:
					player.setX = (player.getX - 10);
					if(player.getX<0) {dir=68}
					break;
			}
			
			if(dir != 0)
				for(let findex = 0; findex < wall1.length; findex++){
					if(player.getX < wall1[findex].xPos + wall1[findex].getWidth &&  player.getX + player.getWidth > wall1[findex].xPos && 
					player.getY < wall1[findex].yPos + wall1[findex].getHeight &&  player.getY + player.getWidth > wall1[findex].yPos){	
						
						
						if(dir == 87)
							player.setY = (player.getY + 10);
						if(dir == 83)
							player.setY = (player.getY - 10);
						if(dir == 68)
							player.setX = (player.getX - 10);
						if(dir == 65)
							player.setX = (player.getX + 10);
								
						dir = 0;

						//Por si queremos que rebote
						/*
						if(dir == 87)
							dir = 83;
						else if(dir == 83)
							dir = 87
						else if(dir == 68)
							dir = 65;
						else
							dir = 68
						*/
						console.log("Collision");
						repaint();
					}   
				}
			repaint();
			window.requestAnimationFrame(update);
		}

		window.requestAnimationFrame = (function () {
			return window.requestAnimationFrame ||
				window.webkitRequestAnimationFrame ||
				window.mozRequestAnimationFrame ||
				function (callback) {
					window.setTimeout(callback, 17);
				};
		}());
		window.requestAnimationFrame(update);
	</script>
</body>
</html>